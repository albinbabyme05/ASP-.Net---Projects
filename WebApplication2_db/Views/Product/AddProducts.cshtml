
@{
    ViewData["Title"] = "Add Product";
}

<div>
    <h2 class="display-4">Add Product</h2>
</div>

<div>
    <form asp-controller="Product" asp-action="AddProductItem" method="post">

        @* productId *@
        <div class="mb-3">
            <label for="productId" class="form-label">Product Id</label>
            <input type="text" name="productId" class="form-control" id="productId" placeholder="Enter your productId" />
        </div>

        @*email*@
        <div class="mb-3">
            <label for="productName" class="form-label">Product Name</label>
            <input type="text" name="productName" class="form-control" id="productName" placeholder="Enter your productName" />
        </div>

        @*Description*@
        <div class="mb-3">
            <label for="Description" class="form-label" id="Description">Description</label>
            <input type="text" name="description" class="form-control" id="" placeholder="Enter your product description" />
        </div>

        @*Price*@
        <div class="mb-3">
            <label for="price" class="form-label" id="price">Price</label>
            <input type="text" name="price" class="form-control" id="" placeholder="Enter your product price" />
        </div>

        @*Color*@
        <div class="mb-3">
            <label for="color" class="form-label" id="color">Color</label>
            <input type="text" name="color" class="form-control" id="" placeholder="Enter your product color" />
        </div>

        @*button*@
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>
